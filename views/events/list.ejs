<% layout('/layout/main') -%>

<% block('title', 'Események'); -%>

<% events.forEach(function(event) { %>
<section typeof="Event">
   
	<div class="uk-margin-medium-bottom">
		
		<h2 class="uk-margin-remove-top">
			<a class="uk-link-reset" href="#">
				<%= event.name %> - <%= event.date %>
			</a>
		</h2>

	</div>


	<div property="text">
		<p class="uk-width-xxlarge">
			<%= event.description %>
		</p>
	</div>

    
	<p class="uk-margin-medium">
		<a class="uk-button uk-button-default" href="/esemenyek/<%= event.id %>">Megtekintés</a>
		<a class="uk-button uk-button-primary" href="#">Nevezés</a>
   	</p>
</section>
<% }); %>

