<% layout('../layout/main') -%>

<% block('title', 'Szerkesztés'); -%>
<h2>Szerkesztés</h2>

<form class="uk-form-stacked" action="/oldal/<%= page._id %>" method="POST">
    <div class="uk-margin">
		<label class="uk-form-label">Cím</label>
		<input type="text" class="uk-input" name="title" value="<%= page.title %>">
	</div>

    <div class="uk-margin">
        <label class="uk-form-label">Tartalom</label>
		<textarea name="content" id="content"><%= page.content %></textarea>
	</div>

	<input type="submit" value="Mentés" class="uk-button uk-button-primary">
</form>

<script>
	var simplemde = new SimpleMDE({ element: document.getElementById("content") });
</script>

