<% layout('../layout/main') -%>
<% block('title', 'Csapatok'); -%>
<% block('header', 'Csapatok'); -%>


<div class="uk-child-width-1-3@m uk-grid uk-grid-match" uk-grid>
    <% teams.forEach(function(team) { %>
        <div>
            <section class="uk-card uk-card-body uk-card-secondary" typeof="Team">

                <div class="uk-margin-medium-bottom">

                    <h2 class="uk-margin-remove-top">
                        <%= team.name %>
                    </h2>
                    <% team.memberships.forEach(function(member) { %>
                        <a href="/felhasznalok/<%= member.user._id %>"><%= member.user.name %></a>
                    <% }); %>
                </div>

                <a href="/csapatok/<%= team._id %>" class="uk-button uk-button-secondary">MegtekintÃ©s</a>

            </section>
        </div>
    <% }); %>
</div>
