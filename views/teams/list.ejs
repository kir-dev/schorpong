<% layout('../layout/main') -%>
<% block('title', 'Csapatok'); -%>
<% block('header', 'Csapatok'); -%>


<div class="uk-child-width-1-3@m uk-grid uk-grid-match" uk-grid>
    <% teams.forEach(function(team) { %>
        <div>
            <section class="uk-card uk-card-body uk-card-default uk-card-hover" typeof="Team">

                <div class="uk-margin-medium-bottom">

                    <h2 class="uk-margin-remove-top">
                        <%= team.name %>
                    </h2>
                    <h3>6 pont</h3>
                    <h3>Tagok</h3>
                    <ul class="uk-list uk-list-bullet">
                        <% team.memberships.forEach(function(member) { %>
                            <li>
                                <a href="/felhasznalok/<%= member.user._id %>"><%= member.user.name %></a>
                            </li>
                        <% }); %>
                    </ul>
                </div>

                <a href="/csapatok/<%= team._id %>" class="uk-button uk-button-default">Megtekint√©s</a>

            </section>
        </div>
    <% }); %>
</div>
