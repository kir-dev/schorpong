<% layout('/layout/main') -%>

<% block('title', 'Eszközök'); -%>

<h2 class="uk-align-left">Eszközök</h2>
<a href="/eszkozok/new" class="uk-button uk-button-primary uk-align-right">Új eszköz</a>

<table class="uk-table uk-table-striped uk-table-hover">
	<thead>
		<tr>
			<th>Név</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% tools.forEach(function(tools) { %>
			<tr>
				<td><a href="/eszkozok/<%= tools._id %>"><%= tools.name %></a></td>
				<td>
					<a href="/eszkozok/<%= tools._id %>/edit" class="uk-button uk-button-primary uk-button-small uk-align-right">Szerkesztés</a>
					<a href="/eszkozok/<%= tools._id %>/delete" class="uk-button uk-button-danger uk-button-small uk-align-right">Törlés</a>
				</td>
			</tr>
		<% }); %>
	</tbody>
</table>

