<% layout('/layout/main') -%>

<% block('title', 'Eszközök'); -%>

<% tools.forEach(function(tool) { %>
<section typeof="Tool">
   
	<div class="uk-margin-medium-bottom">
		
		<h2 class="uk-margin-remove-top">
			<a class="uk-link-reset" href="#">
				<%= tool.name %>
			</a>
		</h2>

	</div>

    

	<div property="text">
		<p class="uk-width-xxlarge">
			<%= tool.description %>
		</p>
	</div>

    
	<p class="uk-margin-medium">
		<a class="uk-button uk-button-default" href="/eszkozok/<%= tool._id %>">Megtekintés</a>
   	</p>


    <% if(logged_in) { %>
	<form class="uk-form-stacked" action="/foglalas" method="POST">
		<input type="number" name="quantity" class="uk-input uk-width-1-3">
		<input type="hidden" >
		<input type="submit" class="uk-button uk-button-primary uk-width-1-3" value="Kölcsönzés">
	</form>
    <% } else { %>
	<b>A kölcsönzés megkezdéséhez jelentkezz be!</b>
    <% } %>
</section>
<% }); %>

