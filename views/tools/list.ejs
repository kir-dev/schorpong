<% layout('../layout/main') -%>
<% block('title', 'Eszközök'); -%>
<% block('header', 'Eszközök'); -%>

<div class="uk-child-width-1-3@m uk-grid-small uk-grid-match" uk-grid>
    <% tools.forEach(function(tool) { %>
    <div>
        <section class="uk-card uk-card-hover uk-card-default" typeof="Tool">

            <div class="uk-card-media-top">
                <img src="/img/<%= tool.image %>">
            </div>
            <div class="uk-card-body">
                <h2 class="uk-margin-remove-top">
                        <%= tool.name %>
                </h2>
                <div property="text">
                    <p>
                        <%= tool.description %>
                    </p>
                </div>

            </div>

            <div class="uk-card-footer">
                <% if(logged_in) { %>
                    <form action="/kolcsonzes/<%= tool._id %>" method="POST">
                        <div class="uk-grid-collapse" uk-grid>
                            <div class="uk-width-1-4">
                                <input class="uk-input uk-form-medium" type="number" name="amount" value="1" min="1" max="20">
                            </div>
                            <div class="uk-width-expand">
                                <input type="submit" class="uk-button uk-button-primary" value="Kosárba">
                            </div>
                        </div>
                    </form>
                <% } else { %>
                    <b>A kölcsönzés megkezdéséhez jelentkezz be!</b>
                <% } %>
            </div>

        </section>
    </div>
    <% }); %>
</div>


