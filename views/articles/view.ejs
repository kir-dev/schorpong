<% layout('/layout/main') -%>
<% block('title', article.title) -%>

<article class="uk-article" typeof="Article">


    <div class="uk-margin-medium-bottom">

        <div class="uk-flex uk-flex-middle uk-flex-space-between" uk-grid>
            <div class="uk-width-4-5">
                <h2 class="uk-article-title uk-margin-remove-top">
                    <a class="uk-link-reset" href="#">
                        <%= article.title %>
                    </a>
                </h2>
            </div>

            <div class="uk-width-1-5">
                <ul class="uk-subnav uk-subnav-divider uk-align-right">
                    <li><span><time datetime="<%= article.createdAt %>"><%= article.date %></time></span></li>
                </ul>
            </div>
        </div>
    </div>

    <div property="text">
        <p class="uk-text-lead">
            <%= article.intro %>
        </p>

        <img src="/img/<%= article.image %>" class="uk-align-center">
        <div id="markdown" class="uk-hidden"><%= article.content %></div>
        <div id="html"></div>
        <script>
            var converter = new showdown.Converter();
            html = converter.makeHtml($('#markdown').text());
            $('#html').html(html);
        </script>

    </div>

</article>
