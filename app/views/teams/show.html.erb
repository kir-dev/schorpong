<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @team.name %>
</p>

<p>
  <strong>Score:</strong>
  <%= @team.score %>
</p>
<% if @team.user_can_join?(current_user) %>
  <%= button_to 'Csatlakozás', team_memberships_path(@team), method: 'post' %> |
<% end %>
<%= link_to 'Edit', edit_team_path(@team) %> |
<%= link_to 'Back', teams_path %>
<h3>Aktív</h3>
<% active_members(@team).each do |membership| %>
  <%= link_to membership.user.name, user_path(membership.user) %>
  <% if membership.admin? %>
    <i class="shield icon"></i>
  <% end %>
<% end %>

<h3>Feldolgozás alatt</h3>
<% inactive_members(@team).each do |membership| %>
  <%= link_to membership.user.name, user_path(membership.user) %>
  <% if current_user&.admin_of?(membership.team)  %>
    <%= link_to 'Elfogadás', team_membership_approve_path(membership.team, membership), method: 'put' %>
  <% end %>
<% end %>