<h1>
  <%= @user.name %>
</h1>

<% if can_update_user?(@user) %>
  <p>
    <%= @user.mail %>
  </p>
  <%= link_to 'Szerkesztés', edit_user_path(@user), class: 'ui button' %>
<% end %>

<h2>Csapatok</h2>
<ul class="ui bulleted list">
  <% @user&.memberships.each { |membership| %>
    <li class="item">
      <%= link_to membership.team.name, team_path(membership.team) %>
      <% if !membership.active? %>
        &nbsp;(feldolgozás alatt)
      <% end %>
      <% if membership.admin? %>
        <i class="shield icon"></i>
      <% end %>
    </li>
  <% } %>
</ul>
