<!DOCTYPE html>
<html>
  <head>
    <title>Schorpong</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if logged_in? %>
    <%= button_to "Kijelentkezés", logout_path %>
  <% else %>
    <%= button_to "Bejelentkezés", oauth_login_path %>
  <% end %>
    <%= yield %>
  </body>
</html>
