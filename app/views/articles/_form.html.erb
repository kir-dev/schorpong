  </div>

  <div class="field">
    <%= form.label :image, 'Kép' %>
    <%= form.file_field :image %>
  </div>

  <div class="field">
    <%= form.label :intro, 'Bevezető szöveg' %>
    <%= form.text_field :intro %>
  </div>

  <div class="field">
    <%= form.label :content, 'Tartalom' %>
