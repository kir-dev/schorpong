/*******************************
         Site Overrides
*******************************/

.page-header {
  background-image: url('/images/header.png');
  background-position: center top;
  background-attachment: fixed;
  height: 300px;
  position: relative;
}
.big-page-header {
  height: 700px;
}
.page-header svg {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 2vw;
}
.page-header .logo {
  position:absolute;
  left: 50%;
  margin-left: -70px;
  bottom:100px
}
.page-header .logo img {
  height: 140px;
  width: 140px;
  position:absolute;
}
.ui.inverted.vertical.footer.segment {
  margin-top: 2rem;
}
.segment .image img {
  max-width: 100%;
}
.segment h2 span {
  font-size: 12px;
  float: right;
  font-weight: normal;
  color: #7a7a7a;
}
